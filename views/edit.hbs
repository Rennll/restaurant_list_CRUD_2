<div class="container">
  <form action="/restaurants/{{ restaurant._id }}?_method=put" method="POST">
    <div class="form-group">
      <label for="name">餐廳名稱</label>
      <input type="text" class="form-control" id="name" name="name" value="{{ restaurant.name }}" placeholder="Enter restaurant name">
    </div>
    <div class="form-group">
      <label for="name_en">餐廳英文名稱</label>
      <input type="text" class="form-control" id="name_en" name="name_en" value="{{ restaurant.name_en }}" placeholder="Enter restaurant English name">
    </div>
    <div class="form-group">
      <label for="category">料理類型</label>
      <input list="categories" class="form-control" name="category" value="{{ restaurant.category }}" id="category">
      <datalist id="categories">
        <option>中東料理</option>
        <option>日本料理</option>
        <option>義式餐廳</option>
        <option>美式</option>
        <option>咖啡</option>
        <option>酒吧</option>
      </datalist>
    </div>
    <div class="form-group">
      <label for="image">餐廳圖片</label>
      <input type="text" class="form-control" id="image" name="image" value="{{ restaurant.image }}" placeholder="Enter restaurant image">
    </div>
    <div class="form-group">
      <label for="location">餐廳地址</label>
      <input type="text" class="form-control" id="location" name="location" value="{{ restaurant.location }}" placeholder="Enter restaurant location">
    </div>
    <div class="form-group">
      <label for="phone">餐廳電話</label>
      <input type="text" class="form-control" id="phone"  name="phone" min="9" max="10" value="{{ restaurant.phone }}" placeholder="Enter restaurant location">
    </div>
    <div class="form-group">
      <label for="google_map">餐廳的 google_map</label>
      <input type="text" class="form-control" id="google_map" name="google_map" value="{{ restaurant.google_map }}" placeholder="Enter restaurant location">
    </div>
    <div class="form-group">
      <label for="rating">餐廳的評分</label>
      <input type="range" class="custom-range" min="0" max="5" step="0.1" id="rating" name="rating" value="{{ restaurant.rating }}">
    </div>
    <div class="form-group">
      <label for="description">餐廳的敘述</label>
      <textarea type="text" class="form-control" id="description" name="description" placeholder="Enter restaurant location" value="{{ restaurant.description }}"></textarea>
    </div>
    <button type="submit" class="btn btn-major">儲存</button>
    <a href="/">Back</a>
  </form>
</div>